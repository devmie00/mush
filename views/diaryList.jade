extends layout

block content
    // 日誌一覧
    #page_diaryList(data-role='page', data-url='/diaryList/' + fid)
      div(data-role='header', data-position='fixed', data-theme='d')
        //a(data-role='button', data-rel='back', data-icon='back') 戻る
        a(href='/fieldData/' + fid + '/' + fname, data-role='button', data-icon='back') 戻る
        h1 日誌一覧
        a(href='/diary/'+ fid + '/create', data-icon='edit') 登録

      .ui-content(role='main')
        .ui-field-contain
          label(for='last' data-inline='true') 表示開始日：
           -var today = new Date();
           -var mm = ("0"+(today.getMonth()+1)).slice(-2);
           -var dd = ("0"+(today.getDate()+1)).slice(-2);
           -var last = [today.getFullYear(), mm , dd ].join('-');              
          //- input#last(name='date', type='date', value=last, data-role='datebox', data-options='{"mode":"calbox", "overrideDateFormat": "YYYY/mm/dd"}', data-inline='true')
          input#last(name='date', type='date', value=last, data-role='datebox', data-options='{"mode":"calbox" }', data-inline='true')
        ul#diary-listview(data-role='listview', data-inset='true', data-divider-theme='d', fid=fid, last=last)
      div(data-role='footer', data-position='fixed', data-theme='d')

        div(data-role='navbar')
          ul
            li
              a(data-icon='home', href='/home') ホーム
            li
              a(data-icon='flat-bubble', href='/help') ヘルプ
