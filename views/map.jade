doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title 農業モニタリングサービス
    link(href='http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css', rel='stylesheet')
    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
    script(src='/javascripts/mush.js')        
    script(src='http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js', type='text/javascript')
    script(type='text/javascript', src='http://cdn.jtsage.com/external/jquery.mousewheel.min.js')
    script(src='https://www.google.com/jsapi')
    script(type='text/javascript', src='http://maps.google.com/maps/api/js?sensor=false')

    style(type='text/css').
      #map_canvas {
      width:100%;
      height:800px;
      border:4px solid #fff;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      }
  });

  body
    // 地図
    #page_map(data-role='page', data-theme='d', fname=fname, location=location)
      div(data-role='header', data-theme='d')
        a(data-role='button', data-rel='back', data-icon='back') 戻る
        h1 #{title}
      div(data-role='content')
        - console.log('> in map:' + location)
        #map_canvas
      div(data-role='footer', data-position='fixed', data-theme='d')
        h4 © 2015 TABrain, Inc.
